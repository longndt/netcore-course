@model IEnumerable<web.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>Genre List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.GenreId">Details</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {

                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.GenreId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
